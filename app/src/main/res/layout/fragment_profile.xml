<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ProfileFragment">>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray">


            <androidx.cardview.widget.CardView
                android:id="@+id/cvAva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="100dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.1">
                <ImageView
                    android:id="@+id/avatarImageView"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ava" />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/txtUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jerry Le"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/cvAva"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


            <LinearLayout
                android:id="@+id/Info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtUserName"
                android:paddingTop="15dp"
                android:paddingHorizontal="30dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtHoTen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ho va ten"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary1"/>
                <TextView
                    android:id="@+id/txtNameValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jerry Le"
                    android:textSize="16sp"
                    android:textColor="@color/primary2"
                    android:layout_marginVertical="5dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/secondary2"
                    app:layout_constraintTop_toBottomOf="@id/txtNameValue"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>


                <TextView
                    android:id="@+id/txtNgaySinh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Ngay sinh"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary1"/>
                <TextView
                    android:id="@+id/txtBirthdayValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08/08/2003"
                    android:textSize="16sp"
                    android:textColor="@color/primary2"
                    android:layout_marginVertical="5dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/secondary2"
                    app:layout_constraintTop_toBottomOf="@id/txtBirthdayValue"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>


                <TextView
                    android:id="@+id/txtSoDienThoai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="So dien thoai"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary1"/>
                <TextView
                    android:id="@+id/txtPhoneValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0879874683"
                    android:textSize="16sp"
                    android:textColor="@color/primary2"
                    android:layout_marginVertical="5dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/secondary2"
                    app:layout_constraintTop_toBottomOf="@id/txtPhoneValue"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>


                <TextView
                    android:id="@+id/txtEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Email"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary1"/>
                <TextView
                    android:id="@+id/txtUserEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="huylg@st.uel.edu.vn"
                    android:textSize="16sp"
                    android:textColor="@color/primary2"
                    android:layout_marginTop="5dp"
                    android:layout_marginVertical="5dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/secondary2"
                    app:layout_constraintTop_toBottomOf="@id/txtUserEmail"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>


            </LinearLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Info">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="15dp">


                    <TextView
                        android:id="@+id/txtChangePass"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Đổi mật khẩu"
                        android:textStyle="bold"
                        android:textColor="@color/primary1"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"/>


                    <ImageView
                        android:id="@+id/imvNext"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/baseline_navigate_next"
                        android:layout_weight="0"/>


                </TableRow>
            </TableLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </FrameLayout>


