<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.AccountActivity"
    android:paddingHorizontal="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvAva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1">
        <ImageView
            android:id="@+id/avatarImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ava" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/txtNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Họ và tên"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/cvAva" />


    <EditText
        android:id="@+id/edtCustomerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập họ và tên"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/txtNameTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/txtViewBirthdayTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày sinh"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtCustomerName"
        android:layout_marginTop="10dp"/>


    <EditText
        android:id="@+id/edtCustomerDOB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="DD/MM/YYYY"
        android:textSize="14sp"
        android:inputType="date"
        app:layout_constraintTop_toBottomOf="@+id/txtViewBirthdayTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/txtPhoneNumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số điện thoại"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtCustomerDOB"
        android:layout_marginTop="5dp"/>
    <EditText
        android:id="@+id/edtCustomerPhoneNumb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint=" Nhập số điện thoại"
        android:textSize="14sp"
        android:inputType="date"
        app:layout_constraintTop_toBottomOf="@+id/txtPhoneNumb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtCustomerPhoneNumb"
        android:layout_marginTop="5dp"/>
    <EditText
        android:id="@+id/edtCustomerEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nhập Email"
        android:textSize="14sp"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@+id/txtEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/txtAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Địa chỉ"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtCustomerEmail"
        android:layout_marginTop="5dp"/>
    <EditText
        android:id="@+id/edtCustomerAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nhập số nhà, tên đường, khu phố, phường, thành phố"
        app:layout_constraintTop_toBottomOf="@+id/txtAddress"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintStart_toStartOf="parent"/>
    <Spinner
        android:id="@+id/spnProvinces"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintLeft_toRightOf="@+id/edtCustomerAddress"
        app:layout_constraintTop_toBottomOf="@+id/txtAddress"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button"
        android:text="Cập nhật"
        android:textSize="14sp"
        android:textColor="#FFFF"
        android:padding="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/edtCustomerAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>


