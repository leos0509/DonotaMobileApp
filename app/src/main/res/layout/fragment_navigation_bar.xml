<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_navigation_bg"
        android:elevation="5dp"
        android:clipToOutline="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="TRANG CHỦ"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="0dp"
                android:textSize="12sp"
                android:textColor="@color/primary1"
                android:paddingVertical="20dp"
                android:fontFamily="@font/bevietnampro_regular"
                android:drawableTop="@drawable/baseline_home_filled_24"
                android:background="@drawable/white_nav_btn_bg"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="danh mục"
                android:layout_weight="1"
                android:paddingVertical="20dp"
                android:textSize="12sp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="0dp"
                android:textColor="@color/primary1"
                android:fontFamily="@font/bevietnampro_regular"
                android:drawableTop="@drawable/baseline_dashboard_24"
                android:drawableTint="@color/primary1"
                android:background="@drawable/white_nav_btn_bg"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Giỏ hàng"
                android:layout_weight="1"
                android:paddingVertical="20dp"
                android:textSize="12sp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="0dp"
                android:textColor="@color/primary1"
                android:fontFamily="@font/bevietnampro_regular"
                android:drawableTop="@drawable/baseline_shopping_cart_24"
                android:drawableTint="@color/primary1"
                android:background="@drawable/white_nav_btn_bg"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_profile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="tài khoản"
                android:paddingVertical="20dp"
                android:textSize="12sp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="0dp"
                android:textColor="@color/primary1"
                android:fontFamily="@font/bevietnampro_regular"
                android:drawableTop="@drawable/baseline_person_24"
                android:drawableTint="@color/primary1"
                android:background="@drawable/white_nav_btn_bg"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
