<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    app:cardCornerRadius="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <ImageView
            android:id="@+id/imvProduct"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/transparent_4dp_corner_bg"
            android:scaleType="centerCrop"
            android:src="@drawable/dining_table"
            android:clipToOutline="true"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/txtProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            style="@style/body2"
            android:layout_marginTop="5dp"
            android:paddingVertical="5dp"
            app:layout_constraintTop_toBottomOf="@id/imvProduct"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRating"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:background="@drawable/primary1_4dp_corner_bg"
            android:drawableStart="@drawable/material_symbols_star"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:text="4.8"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@id/txtProductName"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/txtProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="190.000Ä‘"
            style="@style/body2"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/btnRating"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>