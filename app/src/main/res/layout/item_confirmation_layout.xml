<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="20dp">
    <ImageView
        android:id="@+id/imvProductThumb"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/bantra"
        android:layout_marginRight="20dp"/>
    <TextView
        android:id="@+id/txtProductName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Ban tra"
        app:layout_constraintStart_toEndOf="@id/imvProductThumb"
        app:layout_constraintTop_toTopOf="parent"

        android:textStyle="bold"
        android:textColor="@color/primary1"/>
    <TextView
        android:id="@+id/txtQuantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imvProductThumb"
        app:layout_constraintTop_toBottomOf="@id/txtProductName"
        android:text="So luong 1"
        android:textSize="14sp"
        android:textColor="@color/primary2"/>

    <TextView
        android:id="@+id/txtProductPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imvProductThumb"
        app:layout_constraintTop_toBottomOf="@id/txtQuantity"
        android:text="1.000.000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/primary1"/>


</androidx.constraintlayout.widget.ConstraintLayout>