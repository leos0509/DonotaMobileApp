<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.PolicyFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingHorizontal="10dp"
        android:paddingVertical="20dp">

        <TextView
            android:id="@+id/txtCancelOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chính sách hủy đơn"
            style="@style/subtitle"
            android:textColor="@color/primary1"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <TextView
            android:id="@+id/txtCancelOrderContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/CancelOrder_Content"
            android:textColor="@color/primary2"
            android:layout_marginTop="10dp"
            style="@style/body1"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/txtCancelOrder" />

        <TextView
            android:id="@+id/txtRefund"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chính sách hoàn tiền"
            style="@style/subtitle"
            android:textColor="@color/primary1"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@+id/txtCancelOrderContent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <TextView
            android:id="@+id/txtRefundContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/CancelOrder_Content"
            android:textColor="@color/primary2"
            android:layout_marginTop="10dp"
            style="@style/body1"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/txtRefund" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

