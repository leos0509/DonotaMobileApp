<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gray_no_corner_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ProductDetailFragment">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardvProductDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:elevation="10dp"
                android:clipChildren="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="16dp">
                    <ImageView
                        android:id="@+id/imvProductThumb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/product_img_holder"
                        android:contentDescription="Image Thumb Display"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <TextView
                        android:id="@+id/txtProductName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kệ tivi Tropical 1m8 gỗ MDF màu tự nhiên"
                        android:textSize="20sp"
                        style="@style/subtitle"
                        android:paddingVertical="10dp"
                        app:layout_constraintTop_toBottomOf="@id/imvProductThumb"/>
                    <TextView
                        android:id="@+id/txtProductPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="13.450.000đ"
                        android:textSize="20sp"
                        style="@style/subtitle"
                        android:paddingVertical="10dp"
                        app:layout_constraintTop_toBottomOf="@id/txtProductName"/>
                    <View
                        android:id="@+id/horizontalLine1"
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:background="@color/primary1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txtProductPrice"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/horizontalLine1"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="10dp">
                        <ImageView
                            android:id="@+id/imvIconRating"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/material_symbols_star_primary1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:contentDescription="RatingIcon"/>
                        <TextView
                            android:id="@+id/txtRating"
                            style="@style/body1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.5"
                            android:layout_marginLeft="4dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/imvIconRating"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/horizontalLine1"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="10dp">
                        <ImageButton
                            android:id="@+id/btnChat"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/material_symbols_chat_outline"
                            android:background="@drawable/transparent_4dp_corner_bg"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>
                        <ImageButton
                            android:id="@+id/btnShare"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/material_symbols_ios_share"
                            android:background="@drawable/transparent_4dp_corner_bg"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/btnChat"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardvProductDes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                app:elevation="10dp"
                android:clipChildren="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardvProductDisplay">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="16dp">
                    <TextView
                        android:id="@+id/txtDescriptionTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mô tả sản phẩm"
                        style="@style/button2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:id="@+id/txtDescriptionContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Kệ TV Neoclassical 2m gỗ sồi tự nhiên màu trắng là điểm nhấn tuyệt vời cho phòng khách. Thiết kế độc đáo với các ngăn kéo, chạm khắc thủ công tinh tế mang lại vẻ sang trọng. Chất liệu gỗ sồi tự nhiên kết hợp màu trắng thanh lịch tạo nên sự hoàn hảo và tính thẩm mỹ cao. Kệ TV Neoclassical không chỉ là nơi đặt TV mà còn là điểm nhấn nghệ thuật cho không gian sống của bạn."
                        style="@style/body2"
                        app:layout_constraintTop_toBottomOf="@id/txtDescriptionTitle"
                        app:layout_constraintStart_toStartOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardvSimilarProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:elevation="10dp"
                android:clipChildren="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardvProductDes">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="16dp">
                    <TextView
                        android:id="@+id/txtSimilarProductTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sản phẩm tương tự"
                        style="@style/button2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/revSimilarProduct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:clipChildren="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txtSimilarProductTitle"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <androidx.cardview.widget.CardView
        android:id="@+id/btnCollectionDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Thêm vào giỏ"
                style="@style/button1"
                android:layout_weight="1"
                android:paddingVertical="10dp"
                android:paddingHorizontal="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="0dp"
                android:textSize="12sp"
                android:textColor="@color/primary1"
                android:fontFamily="@font/bevietnampro_regular"
                android:drawableLeft="@drawable/baseline_shopping_cart_24"
                android:drawableTint="@color/primary1"
                android:background="@drawable/white_nav_btn_bg"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Mua ngay"
                style="@style/button1"
                android:layout_weight="1"
                android:paddingVertical="10dp"
                android:textSize="12sp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="0dp"
                android:textColor="@color/primary1"
                android:fontFamily="@font/bevietnampro_regular"
                android:drawableTint="@color/primary1"
                android:background="@drawable/white_nav_btn_bg"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>